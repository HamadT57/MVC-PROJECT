@model IEnumerable<MovieTR.Models.Movies>

@{
    ViewData["Title"] = "Index";
    ViewData["Role"] = User.Claims.Where(c => c.Type == "Role").FirstOrDefault()?.Value;
    Layout = "~/Views/Shared/_ALayout.cshtml";
}
@if (ViewData["Msg"] != null)
{
    <div class="alert alert-default-success">
        <strong>SUCCESS!</strong> @ViewData["Msg"]
    </div>
}
<p>
    <a asp-action="AddMovieView">Add Movie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Mimage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.TheaterId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img class="img-thumbnail" style="width:200px;height:200px" src=@item.Mimage alt="Loadng" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TheaterId)
                </td>
                <td>
                    <a asp-action="MEdit" class="btn btn-danger" asp-route-id="@item.Id">Edit</a> |

                    <a asp-action="MDelete" class="btn btn-warning" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>