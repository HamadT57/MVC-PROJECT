@model IEnumerable<MovieTR.Models.Theaters>

@{
    ViewData["Title"] = "Index";
    ViewData["Role"] = User.Claims.Where(c => c.Type == "Role").FirstOrDefault()?.Value;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    
    <hr />
      <div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header" style="background-color:black;">
                            <p class="card-text">
                                <h5 class="card-title" style="color:white;">
                                    @item.TheaterName
                                    
                                    
                                        
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.Timage" width="220" />
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            
                            <p class="card-text"><b>Location: </b>@item.TheaterLocation</p>
                            <p class="card-text"><b>Price: </b>@item.TheaterPrice</p>
                            



                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">



                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>